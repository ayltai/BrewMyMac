{
    "name"            : "brew-my-mac",
    "description"     : "Possibly the coolest way to install apps and customize your Mac!",
    "version"         : "0.1.0",
    "author"          : {
        "name" : "Alan Tai"
    },
    "repository"      : {
        "type" : "git",
        "url"  : "git+https://github.com/ayltai/BrewMyMac.git"
    },
    "bugs"            : {
        "url" : "https://github.com/ayltai/BrewMyMac/issues"
    },
    "license"         : "MIT",
    "keywords"        : [
        "brew",
        "homebrew",
        "install",
        "installation",
        "mac",
        "macos",
        "package manager"
    ],
    "homepage"        : "https://brewmymac.sh",
    "scripts"         : {
        "eject"     : "react-scripts eject",
        "build"     : "SKIP_PREFLIGHT_CHECK=true react-app-rewired build",
        "predeploy" : "npm run build",
        "deploy"    : "gh-pages -d build",
        "pretest"   : "eslint --ext .js,.jsx,.ts,.tsx src",
        "test"      : "jest",
        "start"     : "BROWSER=none SKIP_PREFLIGHT_CHECK=true react-app-rewired start",
        "update"    : "npx npm-check-updates"
    },
    "dependencies"    : {
        "@emotion/react"       : "^11.10.4",
        "@emotion/styled"      : "^11.10.4",
        "@fontsource/roboto"   : "^4.5.8",
        "@mui/icons-material"  : "^5.10.3",
        "@mui/material"        : "^5.10.5",
        "@reduxjs/toolkit"     : "^1.8.5",
        "ejs"                  : "^3.1.8",
        "flexsearch"           : "^0.7.21",
        "ga-4-react"           : "^0.1.281",
        "i18next"              : "^21.9.1",
        "minisearch"           : "^5.0.0",
        "path-browserify"      : "^1.0.1",
        "react"                : "^18.2.0",
        "react-error-boundary" : "^3.1.4",
        "react-dom"            : "^18.2.0",
        "react-i18next"        : "^11.18.6",
        "react-redux"          : "^8.0.2",
        "redux-persist"        : "^6.0.0",
        "usehooks-ts"          : "^2.6.0",
        "uuid"                 : "^9.0.0"
    },
    "devDependencies" : {
        "@babel/core"                   : "^7.19.0",
        "@babel/preset-env"             : "^7.19.0",
        "@babel/preset-typescript"      : "^7.18.6",
        "@babel/runtime"                : "^7.19.0",
        "@testing-library/jest-dom"     : "^5.16.5",
        "@testing-library/react"        : "^13.4.0",
        "@tsconfig/create-react-app"    : "^1.0.2",
        "@types/ejs"                    : "^3.1.1",
        "@types/jest"                   : "^29.0.2",
        "@types/node"                   : "^18.7.17",
        "@types/react"                  : "^18.0.19",
        "@types/react-dom"              : "^18.0.6",
        "@types/react-test-renderer"    : "^18.0.0",
        "@types/uuid"                   : "^8.3.4",
        "babel-jest"                    : "^29.0.3",
        "eslint"                        : "8.22.0",
        "eslint-plugin-import"          : "^2.26.0",
        "eslint-plugin-jest"            : "^27.0.4",
        "eslint-plugin-jest-dom"        : "^4.0.2",
        "eslint-plugin-prefer-arrow"    : "^1.2.3",
        "eslint-plugin-react"           : "^7.31.8",
        "eslint-plugin-react-hooks"     : "^4.6.0",
        "eslint-plugin-testing-library" : "^5.6.4",
        "eslint-plugin-unicorn"         : "^43.0.2",
        "gh-pages"                      : "^4.0.0",
        "jest-fetch-mock"               : "^3.0.3",
        "jest"                          : "^29.0.3",
        "jest-environment-jsdom"        : "^29.0.3",
        "react-app-rewired"             : "^2.2.1",
        "react-scripts"                 : "^5.0.1",
        "react-test-renderer"           : "^18.2.0",
        "typescript"                    : "^4.8.3"
    },
    "jest"            : {
        "collectCoverage"        : true,
        "collectCoverageFrom"    : [
            "./src/**/*.{js,jsx,ts,tsx}"
        ],
        "testPathIgnorePatterns" : [
            "<rootDir>/src/utils/test.tsx"
        ],
        "setupFilesAfterEnv"     : [
            "<rootDir>/src/setupTests.ts"
        ],
        "testEnvironment"        : "jsdom"
    },
    "engines"         : {
        "node" : ">=18"
    },
    "browserslist"    : {
        "production"  : [
            ">0.5%",
            "not dead",
            "not Explorer <= 11",
            "not OperaMini all",
            "Firefox ESR"
        ],
        "development" : [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
