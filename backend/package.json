{
    "name"            : "brewmymac-backend",
    "description"     : "BrewMyMac backend",
    "version"         : "1.0.0",
    "scripts"         : {
        "build"     : "tsc",
        "postbuild" : "cp package.json build && cd build && npm i --legacy-peer-deps --production",
        "watch"     : "tsc -w",
        "prestart"  : "npm run build",
        "start"     : "func start",
        "update"    : "npx npm-check-updates"
    },
    "dependencies"    : {
        "mongoose" : "^7.2.1",
        "uuid"     : "^9.0.0"
    },
    "devDependencies" : {
        "@azure/functions" : "^3.2.0",
        "@types/node"      : "^18.11.9",
        "@types/uuid"      : "^8.3.4",
        "typescript"       : "^4.8.4"
    },
    "engines"         : {
        "node" : ">=18"
    }
}
